<h2>Creating a review for <%= @book.title %></h2>

<form action="/books/<%= @book.id %>/reviews/new" method="post">
    <p>
        <lable for="content">review:</label>
        <textarea type="text" name="content"></textarea>
    </p>
    <p>
        <lable for="rating">rating:</label>
        <input type="range" name="rating" min="1" max="5"/>
    </p>
    <input type="submit" value="Submit">
</form>
