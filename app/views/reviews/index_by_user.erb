<h1>Reviews by <%= @user.username %></h1>

<br><br>
<div class="table-responsive">
    <table class="table-hover" style="width:100%">
    <tr>
        <th>Book</th>
        <th>Rating</th>
        <th>Content</th>
        <% if logged_in? && session[:user_id] == @user.id %>
        <th>Action</th>
        <% end %>
    </tr>
        <% @reviews.each do |review| %>
            <tr>
                <td><a href="/books/<%= review.book_id %>"><%= Book.find_by_id(review.book_id).title %></a></td>
                <td><%=review.rating%></td>
                <td><%=review.content%></td>
                <% if logged_in? && session[:user_id] == @user.id %>
                <td>
                    <div class="btn-group">
                        <a href="/reviews/<%= review.id %>" class="btn btn-default">View</a>
                        <a href="/reviews/<%= review.id %>/edit" class="btn btn-default">Update</a>
                        <a href="/reviews/<%= review.id %>/delete" class="btn btn-default">Delete</a>
                    </div>
                </td>
                <% end %>
            </tr>
        <% end %>
    </table>
</div>
<br><br>
<form>
  <input type="button" value="Back" class="btn btn-default" onclick="history.back()">
</form>