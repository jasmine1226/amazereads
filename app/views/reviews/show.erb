<h3>Rating: <%=@review.rating%></h3>
<h3>Review: <%=@review.content%></h3>


<% if session[:user_id] == @review.user_id %>
    <br>
    <a href="/reviews/<%= @review.id %>/edit" class="btn btn-default">Update</a>
    <form action="/reviews/<%= @review.id %>" method="post" style="display:inline">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>    
<% end %>
<br><br>
<p>Like this review? You may also want to...</p>
<a href="/books/<%= @review.book_id %>"">Check out the book</a><br>
<a href="/books/<%= @review.book_id %>/reviews">See how other readers rate this book</a><br>
<a href="/users/<%= @review.user_id %>/reviews">See how other reviews from this user</a>
