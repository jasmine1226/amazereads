  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Amazereads</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper container-fluid">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">amazereads</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/books">Books</a></li>
            <% if logged_in? %>
              <li><a href="/">My Bookshelf</a></li>
              <li><a href="/">My Reviews</a></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if !logged_in? %>
              <li><a href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            <% else %>
              <li><a href="/users/<%= session[:user_id] %>/edit"><span class="glyphicon glyphicon-pencil"></span>Account</a></li>
              <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>amazereads</strong></small>
      </footer>
    </div>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

