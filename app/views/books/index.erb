<h1>Books</h1>

<% if logged_in? %>
    <a href="/books/new">Create a New Nook!</a>
    <br><br>
<% end %>

<div class="table-responsive">
    <table class="table-hover" style="width:100%">
        <tr>
           <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>

        <% @books.each do |book| %>
            <tr>
                <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
                <td><%=book.author%></td>
                <td><%=book.genre%></td>
            </tr>
        <%end%>        
    </table>
</div>