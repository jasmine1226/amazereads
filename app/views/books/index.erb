<h1>Books</h1>
<a href="/books/new">Create a new book!</a>
<br><br>

<table>
<tr>
    <th>title</th>
    <th>author</th>
    <th>genre</th>
    <th>description</th>
</tr>
<% @books.each do |book| %>
    <tr>
        <td><a href="/books/<%book.id%>"><%=book.title%></a></td>
        <td><%=book.author%></td>
        <td><%=book.genre%></td>
        <td><%=book.description%></td>
    </tr>
<%end%>
</table>
