<h2><%=@book.title%></h2>
<b><p>by <%=@book.author%></p>
<p>Genre: <%=@book.genre%></p></b>
<p><%=@book.description%></p>

<div class="btn-group">
    <a href="/books/<%= @book.id %>/reviews" class="btn btn-default">All Reviews</a>    
    <% if logged_in? && session[:user_id] == @user.id %>
        <a href="/books/<%= @book.id %>/reviews/new" class="btn btn-default">Add a Review</a>
    <% end %>
    <a href="/books" class="btn btn-default">Back</a>
</div>